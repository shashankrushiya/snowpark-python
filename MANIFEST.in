# Include important documentation and license files
include README.md
include CHANGELOG.md
include LICENSE.txt
include NOTICE

# Include source files for the snowflake snowpark package
recursive-include src/snowflake/snowpark *.py *.pyi py.typed

# Exclude configuration and development files not needed in distribution
exclude .pre-commit-config.yaml
exclude CONTRIBUTING.md
exclude license_header.txt
exclude tox.ini
exclude mypy.ini

# Exclude the tests directory entirely
prune tests
